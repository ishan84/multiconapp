{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "ishan84/multiconapp-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "multiconapp-server",
            "hostname": "api",
            "essential":false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "multiconapp-worker",
            "hostname": "worker",
            "essential":false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "multiconapp-nginx",
            "hostname": "nginx",
            "essential":true,
            "memory": 128,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
    ]
}